[Unit]
Description=Aiogram3 bot_2 service
After=multi-user.target
 
[Service]
User=root
Group=root
Type=idle
Restart=on-failure

EnvironmentFile=/etc/environment

ExecStart=/bin/bash -c 'cd /$HOME/$PROJECT_NAME/ && source venv/bin/activate && ./our_Bots/bot2/bot_2.py'

[Install]
WantedBy=multi-user.target

